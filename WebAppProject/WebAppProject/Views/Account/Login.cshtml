@model WebAppProject.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login Page";
}

<!-- Wyświetlanie komunikatu o błędzie logowania, jeśli istnieje -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="btn-close text-dark" data-bs-dismiss="alert" aria-label="Close">
        </button>
        @TempData["ErrorMessage"]
    </div>
}

<div class="text-center">
    <div class="col-md-4 mx-auto rounded border p-3">
        <section>
            <h2>Please Log In</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <!-- Formularz logowania -->
            <form asp-action="Login" method="post" asp-controller="Account">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Email" class="form-label">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Password" class="form-label">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="row mb-3">
                        <div class="col d-grid">
                            <!-- Przycisk powrotu do strony głównej -->
                            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary form-control"><i class="fa-solid fa-arrow-left"></i> Go Back</a>
                        </div>
                        <div class="col d-grid">
                            <!-- Przycisk logowania -->
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </div>
                </div>
                <div>
                    <p>
                        <!-- Link do rejestracji nowego użytkownika -->
                        <a asp-action="Register">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
