@model CategoryModel

@{
    ViewData["Title"] = "Upsert Category Page";
    var actionItem = Model?.ID > 0 ? "Edit" : "Add";
}

<div class="PaddingAll">
    <!-- Nagłówek strony, pokazujący czy edytujemy czy dodajemy kategorię wiekową -->
    <h2 class="text-info">@actionItem Age Categories</h2>
    <hr />
    <div class="PaddingAllWhite">
        <div class="row">
            <div class="col-12 p-3">
                <!-- Formularz dodawania/edycji kategorii -->
                <form asp-action="Upsert" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-l"></div>
                        <div class="col-10">
                            <div class="row">
                                <!-- Pole do wpisania nazwy kategorii wiekowej -->
                                <div class="col-3 form-group">
                                    <h3 class="text-info">Name: </h3>
                                </div>
                                <div class="col-9 form-group">
                                    <input asp-for="Name" class="form-control" placeholder="Max 20 characters" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="offset-3 col-lg-4 col-md-4 col-sm-6 form-group p-4">
                                    <!-- Przycisk powrotu do listy kategorii wiekowych -->
                                    <a asp-action="Index" class="btn btn-primary form-control">Close</a>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-8 form-group p-4">
                                    <!-- Przycisk zatwierdzenia (dodawania/edycji) kategorii -->
                                    <button type="submit" class="btn btn-success form-control">@actionItem</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-l"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}